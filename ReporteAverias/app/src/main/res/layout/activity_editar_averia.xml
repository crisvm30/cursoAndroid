<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditarAveriaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/editar_averia"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Editar Avería"
            android:textSize="30sp"
            android:gravity="center_horizontal"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_below="@id/editar_averia"
            android:id="@+id/imagen_lugar"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/imagen_lugar"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Id:"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/id_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_id"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/nombre_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_nombre"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Descripción:"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/descripcion_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_descripcion"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/fecha_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_fecha"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/tipo_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_tipo"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cédula:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/cedula_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_cedula"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/email_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_nombrePersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_email"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Creador:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/nombrePersona_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_nombrePersona"
            android:layout_margin="10dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/telefono_editar"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_telefono"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ubicación:"
                android:textSize="20sp"/>

            <TextView
                android:layout_weight="15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lat:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/ubicacion_lat_editar"
                android:layout_weight="20"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lon:"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/ubicacion_lon_editar"
                android:layout_weight="20"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_botones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout_ubicacion"

            android:gravity="center">
            <Button
                android:id="@+id/boton_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                />

            <Button
                android:id="@+id/boton_eliminar_averia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar Avería"
                />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>