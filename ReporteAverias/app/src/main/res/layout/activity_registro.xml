<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegistroActivity">


    <TextView
        android:id="@+id/agregar_usuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Agregar un Usuario"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/layout_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/agregar_usuario"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="@dimen/registro_text_size"/>
        <EditText
            android:id="@+id/nombre_texto"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_nombre"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textSize="@dimen/registro_text_size"/>
        <EditText
            android:id="@+id/usuario_texto"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_usuario"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textSize="@dimen/registro_text_size"/>
        <EditText
            android:id="@+id/contrasena_texto"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_contrasena"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textSize="@dimen/registro_text_size"/>
        <EditText
            android:id="@+id/correo_texto"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_correo"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textSize="@dimen/registro_text_size"/>
        <EditText
            android:id="@+id/telefono_texto"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cedula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_telefono"
        android:layout_margin="10dp">

        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cédula:"
            android:textSize="@dimen/registro_text_size"/>
        <EditText
            android:id="@+id/cedula_texto"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_botones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/layout_cedula"
        android:layout_margin="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/boton_agregar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Agregar"
           />

        <Button
            android:id="@+id/boton_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_toRightOf="@id/boton_agregar"
            />
    </LinearLayout>

</RelativeLayout>